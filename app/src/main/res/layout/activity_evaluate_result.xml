<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_comment_title"
        layout="@layout/comment_title_view" />

    <include layout="@layout/view_deliver_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_comment_title"
        android:padding="13dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:background="@drawable/shape_gray_line"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y320"
                android:background="@drawable/shape_orange_jianbian"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y46"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp">

                    <View
                        android:layout_width="@dimen/x200"
                        android:layout_height="1px"
                        android:layout_centerVertical="true"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="我的额度"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="@dimen/x200"
                        android:layout_height="1px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500万"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_account"
                        android:layout_marginBottom="@dimen/x6"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/tv_account"
                        android:text="¥"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/y58"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y46"
                    android:background="@drawable/shape_round_stroke_white"
                    android:gravity="center"
                    android:text="查看贷款介绍"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                style="@style/evaluate_text2_sytle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"
                android:text="东海国际公寓的合理估价为" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingLeft="28dp">

                <TextView
                    android:id="@+id/tv_dollar_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x6"
                    android:text="¥"
                    android:textColor="@color/loan_desc"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_account1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_dollar_icon"
                    android:layout_marginLeft="10dp"
                    android:text="500万"
                    android:textColor="@color/loan_desc"
                    android:textSize="30sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content">
                <include layout="@layout/view_deliver_line" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="28dp">

                <TextView
                    style="@style/evaluate_text2_sytle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/location" />

                <TextView
                    style="@style/evaluate_text_sytle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="深圳" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:paddingLeft="28dp">

                <TextView
                    style="@style/evaluate_text2_sytle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/location" />

                <TextView
                    style="@style/evaluate_text_sytle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/location" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:paddingLeft="28dp">

                <TextView
                    style="@style/evaluate_text2_sytle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/location" />

                <TextView
                    style="@style/evaluate_text_sytle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/location" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:paddingLeft="28dp">

                <TextView
                    style="@style/evaluate_text2_sytle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/location" />

                <TextView
                    style="@style/evaluate_text_sytle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/location" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:paddingLeft="28dp">

                <TextView
                    style="@style/evaluate_text2_sytle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/location" />

                <TextView
                    style="@style/evaluate_text_sytle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/location" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <Button
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/shape_round_stroke_orange" />

                <Button
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/shape_round_stroke_orange" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
